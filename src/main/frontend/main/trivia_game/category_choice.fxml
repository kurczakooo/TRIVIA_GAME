<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<VBox styleClass="vbox" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.trivia_game.ChoiceController">
    <Label styleClass="background-label" text="TRIVIA"/>
    <Label styleClass="choice-label" fx:id="choiceText" text="$choiceText"/>
    <HBox styleClass="hbox">
        <VBox.margin>
            <Insets top="200.0" />
        </VBox.margin>
        <Button onAction="#ChoiceHandler" text="ANIMALS" styleClass="choice-button"/>
        <Button onAction="#ChoiceHandler" text="SPORTS" styleClass="choice-button"/>
    </HBox>
</VBox>
