<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>

<VBox styleClass="vbox" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.trivia_game.QuestionController">
    <Label styleClass="background-label" text="TRIVIA" />
    <Label styleClass="question-label" fx:id="question" text="$question" />

    <VBox.margin>
        <Insets top="300.0" />
    </VBox.margin>

    <GridPane styleClass="answers-grid">
        <Button styleClass="answer-button" text="Button 1" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <Button styleClass="answer-button" text="Button 2" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <Button styleClass="answer-button" text="Button 3" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <Button styleClass="answer-button" text="Button 4" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    </GridPane>
</VBox>
